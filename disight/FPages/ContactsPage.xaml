                <!-- Кнопка сообщения -->
                <Button
                    Height="50"
                    Width="50"
                    Background="Transparent"
                    Margin="0 21 43 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    BorderThickness="0">
                    <Button.Content>
                        <Image Source="/FImages/message.png"/>
