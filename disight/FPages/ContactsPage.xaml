            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="160"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!-- Кнопка звонка -->
                <Button
                    Height="50"
                    Width="50"
                    Background="Transparent"
                    Margin="0 21 104 0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    BorderThickness="0">
                    <Button.Content>
